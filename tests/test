#!/bin/bash
if [ "$1" == "-c" ]; then
	rm */*.ir
	rm */*.s
	echo "Cleaned"
	exit 0
fi
if [ ! -d "$1" ]; then
	echo "Need a dir as argument"
	exit 1
fi
cd $1
for c in $(ls); do
	s=$(echo $c | sed 's/c$/s/')
	e=$(echo $c | sed 's/c$/e/')
	if [[ $c == *.c ]]
	then
		echo "-----------------"
		echo "------"$c"------"
		echo "-----------------"
   		./../../bin/dhbwcc -p -t -o $s $c
		if [ -e $e ]
		then
			echo "*** Expected: "
			cat $e | sed 's/^/*** /'
			echo
		fi
	fi
done
